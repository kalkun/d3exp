        <div class="panel panel-default">
            <div class=panel-heading>
                <h4 class="panel-title">
                {{meta.city}}, {{meta.country}}
                </h4>
                <div class="subheader">
                    
                    {{#if allIncidents}}
                    All incidents included
                    {{else}}
                    Only incidents leading to casualties included
                    {{/if}}
                    <div class="align-right">
                        <button {{action "toggleCasualties"}} class="btn btn-default">Toggle</button>
