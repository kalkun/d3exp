                    <tbody>
                        <tr>
                            <td>
                                Last incident
                            </td>
                            <td>
                                {{data.latest}}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Total incidents
                            </td>
                            <td>
                                {{data.incidents}}
                            </td>
                        </tr>
                        <tr>
                            <td>Total fatalities</td>
                            <td>{{data.fatalities}}</td>
                        </tr>
                        <tr>
                            <td>Total injuries</td>
                            <td>{{data.injuries}}</td>
                        </tr>
                        <tr>
                            <td>Most frequent weapon</td>
                            <td>{{data.weapon}}</td>
                        </tr>
                        <tr>
                            <td>{{data.weapon}}</td>
                            <td>{{data.weapon_count}}</td>
                        </tr>
                        <tr>
                            <td>Most frequent known perpetrator</td>
                            {{#if data.perpetrator}}
                            <td>{{data.perpetrator}}</td>
                            {{else}}
                            <td>Unknown</td>
                            {{/if}}
                        </tr>
                        {{#if data.perpetrator}}
                        <tr>
                            <td>{{data.perpetrator}}</td>
                            <td>{{data.perpetrator_count}}</td>
                        </tr>
                        {{/if}}
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <button class="btn btn-default" {{action "openDiagram" "perpetrator"}}>Show Perpetrators</button>
                <button class="btn btn-default" {{action "openDiagram" "weapon"}}>Show Weapons</button>
            </div>
        </div>
    </div>