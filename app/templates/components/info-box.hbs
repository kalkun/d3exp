            <div class="panel-body">
                <table class="table">
                    <!--             <thead>
                        <tr>
                            <th>Detail</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    latest              : d.values.date,
                    location            : d.values.city + ", " + d.values.country,
                    incidents           : d.values.count,
                    fatalities          : d.values.fatalities,
                    injuries            : d.values.injuries,
                    weapon              : d.values.weapon,name,
                    weapon_count        : d.values.weapon.mode,
                    perpetrator         : d.values.perpetrator.name,
                    perpetrator_count   : d.values.perpetrator.mode,
